<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#D1D5DB</item>
        <item name="boxStrokeWidth">1.2dp</item>
        <item name="backgroundTint">#ffffff</item>
        <item name="hintTextColor">@color/textGray</item>
        <item name="cursorColor">@color/textGray</item>
        <item name="android:cursorVisible">true</item>
    </style>

    <style name="TextInputLayoutStyleProfile" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/tl_border_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/textGray</item>
        <item name="backgroundTint">#ffffff</item>
    </style>

    <style name="TextInputEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/textHintColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="roundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/alert_dialog_rounded_corner</item>
    </style>

</resources>